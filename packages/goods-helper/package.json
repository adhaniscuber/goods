{
  "name": "goods-helper",
  "version": "1.1.0",
  "description": "Pomona Goods Design System - Helper",
  "author": "Pomona Front-End Team",
  "homepage": "",
  "license": "ISC",
  "main": "./lib/goods-helper.js",
  "module": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "directories": {
    "lib": "./lib"
  },
  "files": [
    "lib",
    "lib/node_modules",
    "lib/**/*"
  ],
  "publishConfig": {
    "access": "restricted"
  },
  "scripts": {
    "clean": "rimraf lib && rimraf tsc-out",
    "compile": "yarn clean && yarn rollup",
    "dev": "rollup -c -w ./rollup.config.js",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\"",
    "lint": "eslint \"src/**/*.{js,jsx,ts,tsx}\"",
    "prepublishOnly": "yarn compile",
    "rollup": "rollup -c ./rollup.config.js",
    "type-check": "tsc --emitDeclarationOnly",
    "validate": "yarn lint && yarn type-check"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@rollup/plugin-url": "^5.0.1",
    "@types/react": "^16.9.56",
    "babel-loader": "^8.1.0"
  },
  "peerDependencies": {
    "react": "^17.0.1"
  },
  "dependencies": {
    "goods-core": "^1.6.0",
    "react-fast-compare": "^3.2.0",
    "tslib": "^2.0.3"
  },
  "sideEffects": false
}
